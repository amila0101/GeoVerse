# Environment Configuration for GeoVerse Backend v2.0
# Copy this file to .env and update the values with your actual credentials

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5500

# MongoDB Configuration
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/geoverse

# API Security Configuration
# Generate a secure API key for application-level authentication
API_KEY=your_secure_api_key_here

# JWT Configuration
# Generate secure JWT secrets (use: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
# Generate a secure session secret (use: openssl rand -base64 64)
SESSION_SECRET=your_session_secret_here

# Google OAuth 2.0 Configuration
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:5500,http://localhost:5500

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info

# WebSocket Configuration
WEBSOCKET_ENABLED=true
